<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="employee_formatiepunten_form" model="ir.ui.view">
        <field name="name">employee.formatiepunten.form</field>
        <field name="model">employee.formatiepunten</field>
        <field name="arch" type="xml">
            <style>
                #action_plus_trede {
                   width:30mm;
                }
            </style>
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <!--                        <field name="name"/>-->
                        <group>
                            <button id="action_plus_trede" name="action_plus_trede" data-hotkey="v" string="Plus Trede" type="object" class="btn-primary"
                                    style="width:30mm !important;"
                                    groups="base.group_user"
                             confirm="Are you sure you wish to update the Trede of every employee that has
                                been working this year before the month of February?"/>
                        </group>
                    </group>
                    <group string='MAX FORMATIEPUNTEN' name="max_formatiepunten">
                        <field name="ofo"/>
                        <field name="ofso"/>
                        <field name="ovsbo_vso"/>
                        <field name="osbo"/>
                        <field name="ohvbo"/>
                        <field name="ofodir"/>
                        <field name="ofsodir"/>
                        <field name="ovsbo_vsodir"/>
                        <field name="osbodir"/>
                        <field name="ohvbodir"/>
                        <field name="nofso"/>
                        <field name="nofo_ago"/>
                        <field name="novsbo"/>
                        <field name="nohvbotoa"/>
                        <field name="nohvbosa"/>
                        <field name="nosvz"/>
                        <field name="nosa"/>
                        <field name="nosmw"/>
                        <field name="nolopd"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="formatiepunten_root_action" model="ir.actions.act_window">
        <field name="name">Trede en Formatiepunten</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">employee.formatiepunten</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create!
            </p>
        </field>
    </record>

    <menuitem id="formatiepunten_root"
              name="Trede en Formatiepunten"
              parent="hr.menu_human_resources_configuration"
              action="formatiepunten_root_action"
              sequence="1"/>

</odoo>