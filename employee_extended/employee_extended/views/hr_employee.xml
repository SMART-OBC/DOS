<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hr_employee_inherit" model="ir.ui.view">
            <field name="name">hr_employee_form</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='active_group']" position="inside">
                    <field name="schaal_id"/>
                    <field name="schaal_line" invisible="1"/>
                    <field name="trede"/>
                    <field name="type_personeel"/>
                    <field name="formatiepunten"/>
                    <field name="datum_in_dienst"/>
                    <field name="datum_uit_dienst"/>

                </xpath>
                <xpath expr="//group[@name='payroll_group']" position="inside">
                    <field name="bezoldiging" priority="-1"/>
                    <field name="five_percent_bezoldiging"/>
                </xpath>
                <xpath expr="//page[@name='hr_settings']" position="after">
                    <page name="new_page" string="New Page" groups="hr.group_hr_user">
                        <group>
                            <group string='WIJZIGING LESUREN' name="lesuren">
                                <field name="vb_lesuren"/>
                            </group>
                        </group>
                    </page>
                </xpath>
                <xpath expr="//page[@name='hr_settings']" position="after">
                    <page name="mutaties" string="Mutaties" groups="hr.group_hr_user">
                        <group>
                            <group string='WIJZIGING LESUREN 2 SCHOLEN' name="lesuren1">
                                <field name="wijziging" invisible="1"/>
                                <field name="wijziging_lesuren_vsbo" attrs="{'invisible':[('wijziging','=', False)]}"/>
                                <field name="wijziging_lesuren_havo_vwo"
                                       attrs="{'invisible':[('wijziging','=', False)]}"/>
                                <field name="nieuwe_bezoldiging" attrs="{'invisible':[('wijziging','=', False)]}"/>
                            </group>
                            <group string='ACHTERSTANDSBELEID' name="lesuren2">
                                <field name="total_degan_achterstand"/>
                                <field name="currency_id" invisible="1"/>
                                <field name="total_achterstand_betaling" widget="monetary"/>
                            </group>
                            <group string='INVALSKRACHT FO' name="lesuren3">
                                <field name="invaldagen_fo"/>
                                <field name="total_invalskracht_fo_uitbetaling" widget="monetary"/>
                            </group>
                            <group string='INVALSKRACHT VO' name="lesuren4">
                                <field name="total_lesuren"/>
                                <field name="totaal_invalskracht_vo_betaling" widget="monetary"/>
                            </group>
                            <group string='NIEUWE OPVOERING' name="lesuren5">
                                <field name="nieuwe_opvoering_uren"/>
                                <field name="nieuwe_lesuren_bezoldiging" widget="monetary"/>
                            </group>
                            <group string='WIJZIGING OVERUREN' name="lesuren6">
                                <field name="verschil_lesuren" widget="monetary"/>
                                <field name="toelage_van_overuren" widget="monetary"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>