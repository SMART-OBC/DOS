<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="schaal_table_form" model="ir.ui.view">
        <field name="name">schaal.configuration.form</field>
        <field name="model">schaal.configuration</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" string="Schaal Name"/>

                    </group>
                    <notebook>
                        <page string="Schaal value line">
                            <field name="schaal_line_ids">
                                <tree editable="bottom">
                                    <field name="trede"/>
                                    <field name="bezoldiging"/>
                                    <field name="schaal_line_id" invisible="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="schaal_value_table_root_action" model="ir.actions.act_window">
        <field name="name">Schaal Table</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">schaal.configuration</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create!
            </p>
        </field>
    </record>

    <menuitem id="schaal_value_table_root"
              name="Schaal Table"
              parent="hr.menu_human_resources_configuration"
              action="schaal_value_table_root_action"
              sequence="100"/>

</odoo>