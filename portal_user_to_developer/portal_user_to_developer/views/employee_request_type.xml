<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--action-->
    <!--    form view-->
    <record id="working_time_form" model="ir.ui.view">
        <field name="name">working_time_form</field>
        <field name="model">working.time</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="working_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="working_time_tree" model="ir.ui.view">
        <field name="name">working_time_tree</field>
        <field name="model">working.time</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="working_id"/>
            </tree>
        </field>
    </record>


    <record id="employee_request_root_action" model="ir.actions.act_window">
        <field name="name">Working Time</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">working.time</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create!
            </p>
        </field>
    </record>

    <menuitem id="employee_request_root"
              name="Working Time"
              parent="employee_hub_confiq_root"
              action="employee_request_root_action"
              sequence="2"/>

</odoo>