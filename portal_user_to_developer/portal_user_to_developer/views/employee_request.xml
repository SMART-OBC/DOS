<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--action-->
    <!--    form view-->
    <record id="employee_requests_form" model="ir.ui.view">
        <field name="name">employee_requests_form</field>
        <field name="model">employee.request</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_confirm" data-hotkey="v" string="Approve" type="object"
                            groups="base.group_user" attrs="{'invisible':[('state','!=', 'draft')]}"/>
                    <button name="action_reject" data-hotkey="r" string="Reject" type="object"
                            groups="base.group_user" attrs="{'invisible':[('state','!=', 'draft')]}"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="employee_id"/>
                            <field name="spouse_complete_name"
                                   attrs="{'invisible':[('employee_requests','!=', 'family_status')]}"/>
                            <field name="spouse_birthdate"
                                   attrs="{'invisible':[('employee_requests','!=', 'family_status')]}"/>
                            <field name="no_of_children"
                                   attrs="{'invisible':[('employee_requests','!=', 'children')]}"/>
                            <field name="working_hours"
                                   attrs="{'invisible':[('employee_requests','!=', 'working_hours')]}"/>
                            <field name="attachment_ids" widget="many2many_binary" class="oe_inline"/>
                        </group>
                        <group>
                            <field name="employee_requests"/>
                            <field name="marital_status"
                                   attrs="{'invisible':[('employee_requests','!=', 'family_status')]}"/>
                            <field name="description"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="employee_requests_tree" model="ir.ui.view">
        <field name="name">employee_requests_tree</field>
        <field name="model">employee.request</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <record id="employee_requests_root_action" model="ir.actions.act_window">
        <field name="name">Employee Requests</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">employee.request</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create!
            </p>
        </field>
    </record>
    <menuitem id="employee_requests_root"
              name="Employee Requests"
              parent="employee_hub_root"
              action="employee_requests_root_action"
              sequence="12"/>

</odoo>