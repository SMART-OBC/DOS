<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--action-->
    <!--    form view-->
    <record id="employee_hub_form" model="ir.ui.view">
        <field name="name">employee_hub_form</field>
        <field name="model">employee.hub</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="portal_user_id"/>
                        </group>
                        <group>
                             <field name="employee_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="employee_hub_tree" model="ir.ui.view">
        <field name="name">employee.hub.tree</field>
        <field name="model">employee.hub</field>
        <field name="arch" type="xml">
            <tree>
                <field name="employee_id"/>
                <field name="portal_user_id"/>
            </tree>
        </field>
    </record>


    <record id="employee_connection_action" model="ir.actions.act_window">
        <field name="name">Employee Linking</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">employee.hub</field>
        <field name="view_mode">tree,kanban,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create!
            </p>
        </field>
    </record>

    <menuitem id="employee_hub_root"
              name="Employee Hub"
              sequence="10"/>
    <menuitem id="employee_hub_connection"
              name="Employee-Portal"
              parent="employee_hub_root"
              action="employee_connection_action"
              sequence="10"/>

</odoo>