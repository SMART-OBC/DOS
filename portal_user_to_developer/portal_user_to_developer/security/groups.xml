<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_research">
        <field name="name">Research Management</field>
        <field name="description">category for Research Management</field>
    </record>
    <record model="res.groups" id="group_scholar_manager">
        <field name="name">Scholar manager</field>
        <field name="category_id" ref="module_category_research"/>
<!--        <field name="implied_ids" eval="[(4, ref('group_scholar_user'))]"/>-->
<!--        <field name="description">Research Management System</field>-->
    </record>
    <record id="group_scholar_user" model="res.groups">
        <field name="name">Scholar User</field>
        <field name="category_id" ref="module_category_research"/>
    </record>
    <record model="ir.rule" id="book_reservation_rule">
        <field name="name">Only User Reservations</field>
        <field name="model_id" ref="model_research_book_reservation"/>
        <field name="domain_force">[('responsible_id', '=',user.id)]</field>
        <field name="groups" eval="[(4, ref('group_scholar_user'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="0"/>
    </record>

</odoo>