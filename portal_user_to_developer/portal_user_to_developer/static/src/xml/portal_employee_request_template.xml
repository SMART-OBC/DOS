<odoo>
    <template id="employee_request_template">
        <t t-call="portal.portal_layout">
            <section class='employee_requests'>
                <form action="/employee_request/submits" enctype="multipart/form-data" method="post">
                    <div class="cover">
                        <h3 class="" style="padding-left: 8mm; padding-top:2mm;">EMPLOYEE REQUEST
                        </h3>
                        <div class="selection" style="position: absolute; left: 11mm; top: 21mm;">
                            <label for="cars">Request Type</label>&amp;nbsp;&amp;nbsp;
                            <select id="request_type" name="request_type">
                                <option value="0" selected="">Select your request</option>
                                <option value="family_status">Burgelijke staat</option>
                                <option value="children">Kinderen</option>
                                <option value="working_hours">Lesuren</option>
                            </select>
                        </div>
                        <div class="family_status-fields d-none"
                             style="position: absolute; left: 11mm; font-weight: bold; top:35mm;">
                            <label for="marital_status">Marital status</label>&amp;nbsp;
                            <select id="marital_status" name="marital_status">
                                <option value="0" selected="">Select</option>
                                <option value="single">Single</option>
                                <option value="married">Married</option>
                                <option value="cohabitant">Legal Cohabitant</option>
                                <option value="widower">Widower</option>
                                <option value="divorced">Divorced</option>
                            </select>

                            <label for="spouse_name" style="padding-left:25px;">Spouse Complete Name</label>&amp;nbsp;
                            <input type="text" id="spouse_name" name="spouse_name"/>

                            <label for="spouse_birthdate" style="padding-left:25px;">Spouse Birthdate</label>&amp;nbsp;
                            <input type="date" id="spouse_birthdate" name="spouse_birthdate"/>

                        </div>
                        <div class="children-fields d-none"
                             style="position: absolute; left: 11mm; font-weight: bold; top:35mm;">
                            <label for="no_of_children">Number of Dependent Children</label>&amp;nbsp;
                            <input type="number" id="no_of_children" name="no_of_children"/>
                        </div>
                        <div class="working_hours-fields d-none"
                             style="position: absolute; left: 11mm; font-weight: bold; top:35mm;">
                            <label for="working_hours">Working hours</label>&amp;nbsp;
                            <select id="working_hours_id" name="working_hours_id">
                                <option value="0" selected="">Select</option>
                            </select>
                        </div>

                        <div class="text-left" style="padding-top: 19mm; padding-left:11mm; padding-top:38mm;">
                            Description
                            &amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;
                            <input type="text" class="o_input" id="description" name="description"
                                   style="width:88mm; height:20mm;"/>
                        </div>
                        <div class="text-left" style=" padding-left:11mm; padding-top:5mm;">
                            Upload a file &amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;&amp;nbsp;
                            <input type="file" id="myfile" name="myfile" multiple="true"
                                   accept="image/*,application/pdf,video/*"/>
                        </div>
                        <div class="" style="padding-top:10mm; padding-left: 47mm;">
                            <button class="button-40" id="button-40">SUBMIT
                            </button>
                        </div>
                    </div>
                </form>
            </section>

        </t>
    </template>

    <template id="employee_request_done">
        <t t-call="portal.portal_layout">
            <h2>
                Employee request successfully created...!
            </h2>
            <div class="text-center" style="padding-top:10mm; ">
                <button class="button-40" style="background-color: #0f0c0dbf;">
                    <a role="menuitem" t-attf-href="/my/employee_request" style="color: #f8f9fa;">
                        Back
                    </a>
                </button>
            </div>
        </t>
    </template>


</odoo>