<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="viewlogs">
        <t t-call="portal.portal_layout">
            <section class="gallery_5">
                <div class="wrapper">
                    <section id="gallery">
                        <div class="container">
                            <div id="image-gallery">
                                <div class="g_wrapp">
                                    <t t-if="document">
                                        <t t-foreach="document" t-as="document">
                                            <a t-attf-href="/web/content/#{document.id}?download=true"
                                               class="no-decoration"
                                               target="_blank">
                                                <div style="width:80px;">
                                                    <div class='text-center oe_attachment_embedded o_image img-responsive'
                                                         style="margin-bottom:-21px;"
                                                         t-att-title="document.name"
                                                         t-att-data-mimetype="document.mimetype"
                                                         t-attf-data-src="/web/image/#{document.id}/100x80"/>
                                                    <div class="text-center"
                                                         style="overflow-wrap:break-word">
                                                        <t t-esc="document.name"/>
                                                    </div>
                                                </div>
                                            </a>
                                        </t>
<!--                                    </t>-->
                                    <t t-if="document_url">
                                        <a t-att-href="document_url"
                                           class="no-decoration"
                                           target="_blank">
                                            <div class="oe_attachment_embedded text-center">
                                                <div class='o_image img-responsive'
                                                     style="margin-bottom:-15px;">
                                                    <img class="img_res_url_doc"
                                                         src="/avware_website/static/src/images/doc_new.png"/>
                                                </div>
                                                <div class="text-center"
                                                     style="overflow-wrap:break-word">
                                                    Link to<br/>
                                                    More<br/>
                                                    Documents
                                                </div>
                                            </div>
                                        </a>
                                    </t>
                                    </t>
                                    <t t-else="">
                                        <div class="alert alert-danger">
                                            <strong>No Logs Found</strong>
                                        </div>
                                    </t>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            </section>
        </t>
    </template>
</odoo>


